<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">  
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Production</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/errormessage.xhtml</location>
    </error-page>
   <filter>
        <filter-name>restrict</filter-name>
        <filter-class>mockstock.servlet.LoginFilter</filter-class>
        </filter>
   <filter-mapping>
        <filter-name>restrict</filter-name>
        <url-pattern>*.xhtml</url-pattern>
    </filter-mapping>
       <filter>
        <filter-name>adminrestrict</filter-name>
        <filter-class>mockstock.servlet.AdminFilter</filter-class>
        </filter>
   <filter-mapping>
        <filter-name>adminrestrict</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
       <filter>
        <filter-name>userrestrict</filter-name>
        <filter-class>mockstock.servlet.UserFilter</filter-class>
    </filter> 
   <filter-mapping>
        <filter-name>userrestrict</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>
</web-app>